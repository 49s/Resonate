<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="ResonateTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ltegry</item>
        <item name="android:colorBackground">@color/wht</item>
        <item name="android:textColorPrimaryInverse">@color/wht</item>
        <item name="android:textColorSecondary">@color/ltegry</item>
        <item name="android:textColorSecondaryInverse">@color/drkgry</item>
        <item name="android:textColorPrimary">@color/blk</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimaryDark">@color/drkgry</item>
        <item name="android:text">@style/navText</item>
        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TabTextSide" parent="ResonateTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="navText" parent="ResonateTheme">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/blk</item>
    </style>
    
    <style name="splashTheme" parent="ResonateTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>

