<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:contentDescription="@string/logoDesc"
        android:id="@+id/resetLogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_weight="3"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <TextView
        android:id="@+id/resetText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:text="@string/confirmForgot"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center_horizontal"/>

        <EditText
            android:id="@+id/resetCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/resetCode"
            android:layout_marginTop="15dp"
            android:padding="25dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_below="@+id/resetText">
        </EditText>

        <Button
            android:contentDescription="@string/resetDesc"
            android:id="@+id/ResetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="105dp"
            android:layout_marginLeft="105dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/login_button"
            android:text="@string/resetDesc"
            android:textColor="?android:attr/textColorPrimaryInverse"
            android:textSize="18sp"
            android:clickable="true"/>

    </RelativeLayout>


</LinearLayout>