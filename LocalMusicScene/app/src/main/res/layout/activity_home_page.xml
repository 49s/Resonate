<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lemonapps.localmusicscene.HomePage"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="2dp"
        card_view:cardBackgroundColor="@color/drkgry">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jan 14"
                    android:textColor="@color/wht"
                    android:textSize="26sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:fontFamily="monospace"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:src="@drawable/stevelogo"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/cardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Masks Off with everyone"
                    android:textColor="@color/wht"
                    android:textSize="18sp"
                    android:fontFamily="monospace"
                    android:layout_alignParentTop="true"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/cardBandName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perivale"
                    android:textColor="@color/wht"
                    android:textSize="16sp"
                    android:fontFamily="monospace"
                    android:layout_below="@+id/cardTitle"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:textStyle="italic"/>

                <ImageView
                    android:id="@+id/cardClockIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/clock"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/cardBandName"/>

                <TextView
                    android:id="@+id/cardTimeText"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="7:00pm"
                    android:textColor="@color/ltegry"
                    android:fontFamily="monospace"
                    android:layout_toRightOf="@id/cardClockIcon"
                    android:layout_toEndOf="@id/cardClockIcon"
                    android:layout_below="@id/cardBandName"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/cardHouseIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/house"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/cardClockIcon"/>

                <TextView
                    android:id="@+id/cardVenueText"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="The Rockpile"
                    android:textColor="@color/ltegry"
                    android:fontFamily="monospace"
                    android:layout_toRightOf="@id/cardClockIcon"
                    android:layout_toEndOf="@id/cardClockIcon"
                    android:layout_below="@id/cardTimeText"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/cardMoneyIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/money"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/cardHouseIcon"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Free"
                    android:textColor="@color/ltegry"
                    android:fontFamily="monospace"
                    android:layout_toRightOf="@id/cardClockIcon"
                    android:layout_toEndOf="@id/cardClockIcon"
                    android:layout_below="@id/cardVenueText"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="After a named change from False Face Society the band has been reincarnate..."
                    android:layout_below="@id/cardMoneyIcon"
                    android:textColor="@color/medgry"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:textStyle="italic"/>



            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>


